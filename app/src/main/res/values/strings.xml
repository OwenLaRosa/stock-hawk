<resources
    xmlns:xliff="http://schemas.android.com/apk/res-auto">

    <!-- The "Stock Hawk" brand should be retained for non-English versions -->
    <string name="app_name" translatable="false">Stock Hawk</string>

    <!-- Action identifiers used by the system -->
    <string name="action_change_units" translatable="false">Change Units</string>

    <!-- stock search dialog -->

    <string name="symbol_search">Symbol Search</string>
    <string name="content_test">Search for a Stock Symbol</string>

    <!-- adding stocks -->

    <string name="input_hint">FB</string>
    <!-- String is empty so no need to translate, unlikely to be translatable in the future -->
    <string name="input_prefill" translatable="false"></string>
    <string name="input_prompt">Please enter a company name or symbol.</string>
    <string name="stock_already_exists">This stock is already saved!</string>
    <string name="add_stock_failed">Unable to add stock for query: \"<xliff:g id="symbol">%1$s</xliff:g>\"</string>
    <string name="find_stock_failed">Can\'t find stock for \"<xliff:g id="query">%1$s</xliff:g>\"</string>

    <!-- Displaying money amounts -->

    <string name="currency_symbol" translatable="false">$<xliff:g id="currency">%1$s</xliff:g></string>

    <!-- filtering historical data by date -->

    <string name="filter_one_month">1 Month</string>
    <string name="filter_six_months">6 Months</string>
    <string name="filter_one_year">1 Year</string>

    <!-- Network error messages -->

    <string name="network_toast">Uh-oh! This app requires an internet connection</string>

    <!-- Deprecated: Customize the title for the stock displayed -->
    <string name="title_activity_stock_detail" translatable="false">StockDetailActivity</string>

